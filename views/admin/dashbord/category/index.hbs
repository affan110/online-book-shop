<div class="container-fluid mt-3">

    <div class="card">
        <div class="card-header">
            <h3>Category List
                <div class="float-right">
                    <a href="/admin/dashbord/category/create" class="btn btn-primary">Add New</a>
                </div>
            </h3>
        </div>
        <div class="card-body">
            <table class="table table-striped table-hover text-center table-sm table-bordered table-responsive-sm">
                <thead>
                    <tr>
                        <th>Title</th>
                        <th>Author</th>
                        <th>Description</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>

                    {{# each category }} {{# each this}}
                    <tr>
                        <td>{{this.title}}</td>
                        <td>{{this.titleen}}</td>
                        <td>{{this.description}}</td>
                        <td>
                            <div class="btn-group">
                                {{!-- <a href="/admin/dashbord/category/{{this.id}}/edit" class="btn btn-info" title="Edit">
                                    <i class="fa fa-edit"></i>
                                </a> --}}

                                <button data-toggle="modal" value={{this.id}} class="btn btn-danger" title="Delete"
                                    data-target="#myModal">
                                    <i class="fa fa-trash-o" aria-hidden="true"> </i>
                                </button>
                            </div>
                        </td>

                        <div class="modal fade" id="myModal" role="dialog">
                            <div class="modal-dialog">

                                <!-- Modal content-->
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h4 class="modal-title">Confirm Delete</h4>
                                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                                    </div>
                                    <div class="modal-header">
                                        Are you sure you want to delete the entry?
                                    </div>
                                    <div class="modal-footer">
                                        <a href="" class="btn btn-danger yes">yes</a>
                                    </div>
                                </div>

                            </div>
                        </div>


                    </tr>
                    {{/each}} {{/each}}
                </tbody>
            </table>
        </div>
    </div>

</div>


<script src="/js/jquery.js"></script>
<script src="/jquery/try.js"></script>