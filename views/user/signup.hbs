<div class="row">
  <div class="col-md-4 col-md-offset-4" style="background: #c0bebe91;padding-bottom:1em;">
    <h1 class="text-center">Sign Up</h1>
    {{#if hasErrors}}
    <div class="alert alert-danger">
      {{#each messages}}
      <p>{{this}}</p>
      {{/each}}
    </div>
    {{/if}}
    <form action="/user/signup" method="post">
      <div class="form-group">
        <label for="email">E-Mail</label>
        <input type="text" id="email" name="email" class="form-control shadow-none" />
      </div>
      <div class="form-group">
        <label for="password">Password</label>
        <input type="password" id="password" name="password" class="form-control shadow-none" />
      </div>
      <input type="hidden" name="_csrf" value="{{ csrfToken }}" />
      <button type="submit" class="btn btn-primary">Sign Up</button>
      <span class="pull-right">Already have an account? <a href="/user/signin">Sign In</a></span>
    </form>
  </div>
</div>