<div class="container-fluid mt-3">
    <div class="card">
        <div class="card-header">
            <h3>Product List
                <div class="float-right">
                    <a href="/admin/dashbord/product/create" class="btn btn-primary">Add New</a>
                </div>
            </h3>
        </div>
        <div class="card-body">
            <table class="table table-striped table-sm text-center table-bordered table-responsive-sm table-hover">
                <thead>
                    <tr>
                        <th>Image</th>
                        <th>Title</th>
                        <th>Author</th>
                        <th>Category</th>
                        <th>Price</th>
                        <th>Discount</th>
                        <th>Discount Price</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    {{# each products }} {{# each this}}
                    <tr>
                        <td>
                            <img src="/uploads/{{this.image}}" class="girl img-responsive" alt="" height="50"
                                width="50" />
                        </td>
                        <td>{{this.title}}</td>
                        <td>{{this.titleen}}</td>
                        <td>{{this.category}}</td>
                        <td>{{this.price}}</td>
                        <td>{{this.discount}}%</td>
                        <td>{{this.discountprice}}</td>
                        <td>
                            <div class="btn-group">
                                {{!-- <a href="/admin/dashbord/product/{{this.id}}/edit" class="btn btn-info" title="Edit">
                                    <i class="fa fa-edit"></i>
                                </a> --}}
                                
                                <a href="/admin/dashbord/product/{{this.id}}/delete">
                                <button data-toggle="modal" value={{this.id}} class="btn btn-danger" title="Delete"
                                    data-target="#myModal">
                                    <i class="fa fa-trash-o" aria-hidden="true"> </i>
                                </button>
                                </a>
                            </div>
                        </td>

                        <div class="modal fade" id="myModal" role="dialog">
                            <div class="modal-dialog">
                                <!-- Modal content-->
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h4 class="modal-title">Confirm Delete</h4>
                                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                                    </div>
                                    <div class="modal-header">
                                        Are you sure you want to delete the entry?
                                    </div>
                                    <div class="modal-footer">
                                        <a href="" class="btn btn-danger yes">yes</a>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </tr>
                    {{/each}} {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>

<script src="/js/jquery.js"></script>
<script src="/jquery/product.js"></script>